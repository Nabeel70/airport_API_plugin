				{
					"name": "Sample Flight Search (East London to Cape Winelands)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/flights/api/search/?from_location=101&to_location=94&date_of_travel=28/08/2025&adults=1&currency={{currency}}&ip_address=127.0.0.1",
							"host": ["{{baseUrl}}"],
							"path": ["flights", "api", "search", ""],
							"query": [
								{
									"key": "from_location",
									"value": "101",
									"description": "East London airport ID"
								},
								{
									"key": "to_location",
									"value": "94",
									"description": "Cape Winelands airport ID"
								},
								{
									"key": "date_of_travel",
									"value": "28/08/2025"
								},
								{
									"key": "adults",
									"value": "1"
								},
								{
									"key": "currency",
									"value": "{{currency}}"
								},
								{
									"key": "ip_address",
									"value": "127.0.0.1"
								}
							]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Flight search successful', function () {",
									"    pm.response.to.have.status(200);",
									"    const body = pm.response.json();",
									"    pm.expect(body).to.be.an('object');",
									"    pm.expect(body.available_flights).to.be.an('array');",
									"    console.log('Trip type:', body.trip_type);",
									"    console.log('Available flights:', body.available_flights.length);",
									"    console.log('Map URL:', body.map_image_url);",
									"    if (body.available_flights.length > 0) {",
									"        console.log('First flight:', body.available_flights[0]);",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						}
					]
				},
