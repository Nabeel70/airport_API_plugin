			"item": [
				{
					"name": "Search: Cape Winelands",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/airports/api/list/?q=cape winelands&field_name=from_location",
							"host": ["{{baseUrl}}"],
							"path": ["airports", "api", "list", ""],
							"query": [
								{
									"key": "q",
									"value": "cape winelands"
								},


								{
									"key": "field_name",
									"value": "from_location"
								}
							]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Response is 200', function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test('Response is array', function () {",
									"    const body = pm.response.json();",
									"    pm.expect(Array.isArray(body)).to.be.true;",
									"    console.log('Found airports:', body.length);",
									"    if (body.length > 0) {",
									"        console.log('First airport:', body[0]);",
									"    }",
									"});"
								],
